{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/trpc.ts" },
    { "src": "/trpc/(.*)", "dest": "/api/trpc.ts" },
    { "src": "/(.*)", "dest": "/" }
  ]
}